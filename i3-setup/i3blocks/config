[spotify-previous]
full_text=&#xf04a;
markup=pango
color=#d3d3d3
command=playerctl previous

[spotify-play-pause]
full_text=&#xf04b;
markup=pango
color=#d3d3d3
command=playerctl play-pause

[spotify-next]
full_text=&#xf04e;
markup=pango
color=#d3d3d3
command=playerctl next

[mediaplayer]
command=$SCRIPT_DIR/mediaplayer/mediaplayer
instance=spotify
interval=5
signal=10
color=#1dd05d
label= &#xf001;
markup=pango

[cpu_usage]
