[spotify-previous]
full_text=&#xf04a;
markup=pango
color=#d3d3d3
command=playerctl previous

[spotify-play-pause]
full_text=&#xf04b;
markup=pango
color=#d3d3d3
command=playerctl play-pause

[spotify-next]
full_text=&#xf04e;
markup=pango
color=#d3d3d3
command=playerctl next

[mediaplayer]
command=$SCRIPT_DIR/mediaplayer/mediaplayer
instance=spotify
interval=3
signal=10
label=<span>&#xf001; </span>
markup=pango
color=#1dd05d

[cpu_usage]
command=$SCRIPT_DIR/cpu_usage/cpu_usage
interval=5
markup=pango
label=<span>&#xf2db; </span>
color=#b48ead

[memory]
command=$SCRIPT_DIR/memory/memory
label=<span>&#xf1c0; </span>
interval=10
color=#d3d3d3
markup=pango

[bandwidth]
command=$SCRIPT_DIR/bandwidth2/bandwidth2
